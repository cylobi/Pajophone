@model Pajophone.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="category_tree" class="form-group"></div>
            <div class="my-2"> Selected Category : <span id="selected_category"></span> </div>
            <div class="form-group visually-hidden">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" id="selected_category_id" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @{
                for (int i = 0; i < Model.Fields.Count; i++)
                {
                    <div class="form-group">
                        <div class="row">
                            <input type="hidden" asp-for="Fields[i].KeyId" value="" />
                            @{
                                var fieldType = Model.Fields[i].fieldType;
                                switch (fieldType)
                                {
                                    case FieldType.Bool:
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                <input type="text" class="visually-hidden" asp-for="Fields[i].Value">
                                            </label>
                                        </div>
                                        break;
                                    case FieldType.Range:
                                        <input type="number" name="@($"FieldValues[{Model}]")" value="@Model" />
                                        break;
                                    case FieldType.String:
                                        <input type="text" name="@($"FieldValues[{Model}]")" value="@Model" />
                                        break;
                                    default:
                                        <p>Unsupported field type.</p>
                                        break;
                                }
                            }
                        </div>
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $.getJSON(
            '@Url.Action("GetTree","Category")',
            function(data) {
                $('#category_tree').tree({
                    data: data,
                    autoOpen: 0
                });
            }
        );

        $("#category_tree").on(
            'tree.select',
            function(event) {
                if (event.node) {
                    const node = event.node;
                    $("#selected_category").text(node.name);
                    $("#selected_category_id_id").val(node.id);
                }
            }
        );
        
        
    </script>
}