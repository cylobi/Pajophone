@model Pajophone.ViewModels.ProductCategoryViewModel

<div class="field_template input-group m-3">
    <div class="input-group-prepend">
        <button class="btn btn-danger DeleteRow" type="button">
            <i class="fa-regular fa-trash"></i>
        </button>
    </div>
    <div class="form-group">
        <input asp-for="@Model.FieldKeys[0].Key" class="form-control" />
        @Html.ValidationMessageFor(m => m.FieldKeys[0].Key,
        "", new {@class = "text-danger"})
        @Html.DropDownListFor(m => m.FieldKeys[0].FieldType, Html.GetEnumSelectList<FieldType>(), "Select Field Type", new { @class = "form-control field-type-dropdown"})
        @Html.ValidationMessageFor(m => m.FieldKeys[0].FieldType, 
            "", new {@class = "text-danger"})
    </div>
</div>
